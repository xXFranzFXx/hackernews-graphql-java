type User {
    id: ID!
    name: String!
    email: String
    password: String
}

input AuthData {
    email: String!
    password: String!
}

type Link {
    id: ID!
    url: String!
    description: String!
}
type SigninPayload {
    token: String
    user: User
}

type Mutation {
    createUser(name: String!, authProvider: AuthData!): User
    createLink(url: String!, description: String!): Link
    signinUser(auth: AuthData): SigninPayload
}

type Query {
    allLinks: [Link]
}

schema {
    mutation: Mutation
    query: Query
}